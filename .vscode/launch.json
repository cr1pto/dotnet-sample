{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C#: Sample Debug",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/Samples.Web.Api/Samples.Web.Api.csproj"
    },
    {
      "name": "Samples.Web.Api",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build dotnet-sample.sln",
      "program": "${workspaceFolder}/Samples.Web.Api/bin/Debug/net9.0/Samples.Web.Api.dll",
      "launchSettingsFilePath": "${workspaceFolder}/Samples.Web.Api/Properties/launchSettings.json",
      "cwd": "${workspaceFolder}/Samples.Web.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "envFile": "${workspaceFolder}/envs/app.env",
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Samples.Web.Auth",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build dotnet-sample.sln",
      "program": "${workspaceFolder}/Samples.Web.Auth/bin/Debug/net9.0/Samples.Web.Auth.dll",
      "launchSettingsFilePath": "${workspaceFolder}/Samples.Web.Auth/Properties/launchSettings.json",
      "cwd": "${workspaceFolder}/Samples.Web.Auth",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "envFile": "${workspaceFolder}/envs/auth.env",
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}
